<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
       ">

	<beans profile="tomee">
		<jee:jndi-lookup id="jndiRes" jndi-name="openejb:Resource/homeDir" expected-type="java.lang.String" default-value="." />
	</beans>

	<beans profile="!tomee">
		<jee:jndi-lookup id="jndiRes" jndi-name="homeDir" expected-type="java.lang.String" default-value="." />
	</beans>

	<beans>
		<bean class="lan.test.config.JNDIBean">
			<property name="homeDir" ref="jndiRes"/>
		</bean>
	</beans>
</beans>