<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<beans profile="!tomeee">
		<bean id="config" class="lan.test.config.ConfigBean">
			<property name="resContextPrefix" value="${resources.context.prefix}"/>
			<property name="resContextSuffix" value="${resources.context.suffix}"/>
			<property name="resPortletKeyword" value="${resources.portlet.keyword}"/>
			<property name="needRewriteUrl" value="${history.needRewriteUrl}"/>
		</bean>
	</beans>

	<beans profile="tomee">
		<bean id="config" class="lan.test.config.ConfigBean">
			<property name="resContextPrefix" value="${resources.context.prefix}"/>
			<property name="resContextSuffix" value="${resources.context.suffix}"/>
			<property name="resPortletKeyword" value="${resources.portlet.keyword}"/>
			<property name="needRewriteUrl" value="${history.needRewriteUrl}"/>
			<property name="homeDir" value="#{jndiRes}/"/>
		</bean>
	</beans>

	<beans profile="websphere">
		<bean id="preAuthenticationService" class="lan.test.auth.WebspherePreAuthenticationImpl"/>
	</beans>

	<beans profile="!websphere">
		<bean id="preAuthenticationService" class="lan.test.auth.PreAuthenticationServiceImpl"/>
	</beans>

	<beans>
		<context:property-placeholder location="classpath:config.properties"/>
		<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<property name="locations">
				<list>
					<value>classpath:config.properties</value>
				</list>
			</property>
		</bean>
		<bean id="applicationContextProvder" class="lan.test.config.ApplicationContextProvider"/>
		<context:component-scan base-package="lan.test"/>
	</beans>
</beans>